{
  "name": "Pool Monitor",
  "version": "1.0.0",
  "slug": "pool_monitor",
  "description": "Monitor and manage pool parameters",
  "startup": "services",
  "boot": "auto",
  "host_network": false,
  "options": {
    "pool_volume": 10000,
    "pool_type": "chlorine",
    "sensor_ph": "sensor.ph_sensor",
    "sensor_temp": "sensor.pool_metrics_temperature",
    "sensor_ec": "sensor.ec",
    "sensor_orp": "sensor.orp",
    "sensor_salinity": "sensor.salinity",
    "sensor_tds": "sensor.tds",
    "language": "en"
  },
  "schema": {
    "pool_volume": "int",
    "pool_type": "select",
    "sensor_ph": "str",
    "sensor_temp": "str",
    "sensor_ec": "str",
    "sensor_orp": "str",
    "sensor_salinity": "str",
    "sensor_tds": "str",
    "language": "select"
  },
  "select": {
    "pool_type": ["chlorine", "salt"],
    "language": ["en", "he"]
  },
  "labels": {
    "pool_volume": "Pool Volume (liters)",
    "pool_type": "Pool Type",
    "sensor_ph": "pH Sensor",
    "sensor_temp": "Temperature Sensor",
    "sensor_ec": "EC Sensor",
    "sensor_orp": "ORP Sensor",
    "sensor_salinity": "Salinity Sensor",
    "sensor_tds": "TDS Sensor",
    "language": "Language"
  }
}
