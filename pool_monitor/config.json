{
  "name": "Pool Monitor",
  "version": "1.0.0",
  "slug": "pool_monitor",
  "description": "Monitor and manage pool parameters",
  "startup": "services",
  "boot": "auto",
  "host_network": false,
  "options": {
    "pool_volume": 10000,
    "pool_type": "chlorine",
    "sensor_ph": "sensor.ph_sensor",
    "sensor_temp": "sensor.pool_metrics_temperature",
    "sensor_ec": "sensor.ec",
    "sensor_orp": "sensor.orp",
    "sensor_salinity": "sensor.salinity",
    "sensor_tds": "sensor.tds",
    "language": "en"
  },
  "schema": {
    "pool_volume": "int",
    "pool_type": {
      "type": "str",
      "match": "^(chlorine|salt)$"
    },
    "sensor_ph": "str",
    "sensor_temp": "str",
    "sensor_ec": "str",
    "sensor_orp": "str",
    "sensor_salinity": "str",
    "sensor_tds": "str",
    "language": {
      "type": "str",
      "match": "^(en|he)$"
    }
  }
}
